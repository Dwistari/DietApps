<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="MENU" />

        <Button
            android:id="@+id/bt_kalori"
            android:layout_width="115dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Kalkulator KALORI" />

        <Button
            android:id="@+id/bt_makan"
            android:layout_below="@id/bt_kalori"
            android:layout_width="121dp"
            android:layout_height="97dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="158dp"
            android:text="makanan sehat" />

        <Button
            android:id="@+id/bt_olahraga"
            android:layout_width="121dp"
            android:layout_height="97dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="110dp"
            android:text="olahraga sehat" />

        <Button
            android:id="@+id/bt_viewdata"
            android:layout_width="126dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="Lihat Data" />

</RelativeLayout>
</LinearLayout>